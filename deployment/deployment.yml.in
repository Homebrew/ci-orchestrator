apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: ci-orchestrator
spec:
  replicas: 1
  selector:
    matchLabels:
      app: ci-orchestrator
  serviceName: ci-orchestrator-service
  template:
    metadata:
      labels:
        app: ci-orchestrator
    spec:
      terminationGracePeriodSeconds: 1800
      containers:
      - name: ci-orchestrator
        image: @IMAGE@
        ports:
        - containerPort: 8080
        volumeMounts:
        - name: ci-orchestrator-volume
          mountPath: /data
          subPath: data
        env:
        - name: STATE_FILE
          value: /data/state.json
        envFrom:
        - configMapRef:
            name: ci-orchestrator-config
        - secretRef:
            name: ci-orchestrator-secrets
      - name: nginx
        image: jonasal/nginx-certbot:4-alpine
        ports:
        - containerPort: 80
          hostPort: 80
        - containerPort: 443
          hostPort: 443
        volumeMounts:
        - name: ci-orchestrator-volume
          mountPath: /etc/letsencrypt
          subPath: letsencrypt
        - name: nginx-config-volume
          mountPath: /etc/nginx/user_conf.d/ci-orchestrator.conf
          subPath: ci-orchestrator.conf
          readOnly: true
        env:
        - name: CERTBOT_EMAIL
          value: @CERTBOT_EMAIL@
      volumes:
      - name: ci-orchestrator-volume
        persistentVolumeClaim:
          claimName: ci-orchestrator-disk
      - name: nginx-config-volume
        configMap:
          name: ci-orchestrator-nginx-config
---
apiVersion: v1
kind: Service
metadata:
  name: ci-orchestrator-service
  labels:
    app: ci-orchestrator-app
spec:
  ports:
  - name: http
    port: 80
  - name: https
    port: 443
  clusterIP: None
  selector:
    app: ci-orchestrator-app
